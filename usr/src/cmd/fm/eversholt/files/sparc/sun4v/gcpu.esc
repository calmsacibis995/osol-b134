#define FLT_CPU_UE_UNRETIRED(level, erptleaf, fltleaf)			\
	event fault.cpu.generic-sparc.fltleaf@level,			\
	    retire=0;							\
									\
	prop fault.cpu.generic-sparc.fltleaf@level 			\
