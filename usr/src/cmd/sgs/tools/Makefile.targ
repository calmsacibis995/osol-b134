# cmd/sgs/tools/Makefile.targ


$(ROOTDIR)/bin/%:	%
		$(INS.file)

$(ROOTDIR)/lib/%:	%
		$(INS.file)

sgsmsg:		$(SGSMSG_OBJS)
		$(NATIVECC) $(DEBUG) $(NATIVECC_CFLAGS) \
			-o $@ $(SGSMSG_OBJS)

sgsmsg.o:	../common/sgsmsg.c
		$(NATIVECC) $(DEBUG) $(NATIVECC_CFLAGS) -c ../common/sgsmsg.c

string_table.o:	../common/string_table.c
		$(NATIVECC) $(DEBUG) $(NATIVECC_CFLAGS) -c \
		    ../common/string_table.c

avl.o:		$(VAR_AVLDIR)/avl.c
		$(NATIVECC) $(DEBUG) $(NATIVECC_CFLAGS) -c \
		    $(VAR_AVLDIR)/avl.c

piglatin:	../common/piglatin.c
		$(NATIVECC) $(NATIVECC_CFLAGS) -o $@ ../common/piglatin.c

%:		%.o
		$(LINK.c) -o $@ $< $(LDLIBS)
		$(POST_PROCESS)

%.o:		../common/%.c
		$(COMPILE.c) -o $@ $<
		$(POST_PROCESS_O)

catalog:	sgsmsg

clobber:	clean
		$(RM) $(PROGS) $(NATIVE) $(CLOBBERFILES)

clean:
		$(RM) $(OBJECTS) $(CLEANFILES)

lint:
		@ echo "piglatin.c:"			  >> $(LINTOUT)
		$(LINT.c) ../common/piglatin.c -lc	  >> $(LINTOUT) 2>&1
		@ echo "sgsmsg"				  >> $(LINTOUT)
		$(LINT.c)  $(SGSMSG_SRCS) -lc		  >> $(LINTOUT) 2>&1
