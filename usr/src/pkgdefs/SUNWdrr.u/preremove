#
# Remove the ngdr driver if it is installed.
#

NAMEMAJOR="${BASEDIR}/etc/name_to_major"
REM_DRV="/usr/sbin/rem_drv -b ${BASEDIR}"

DRV="ngdr"

grep "^${DRV} " $NAMEMAJOR > /dev/null 2>&1
if [ $? -eq 0 ]; then
	${REM_DRV} ${DRV}
	if [ $? -ne 0 ]; then
		exit 1
	fi
fi

exit 0
