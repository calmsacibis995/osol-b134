while read src dest
do
	if [ ! -f $dest ] ; then
		cp $src $dest
	else
		#check if destination already has metaslot configuration line
		egrep '^metaslot' $dest > /dev/null 2>& 1
		if [ $? != 0 ] ; then
			#metaslot line doesn't exist, need to add it
			metaslot_config=`egrep '^metaslot' $src`

			if [ $? = 0 ] ; then
				export metaslot_config
				nawk '/^# End SUNWcsr/ \
                        		{ print ENVIRON["metaslot_config"] } \
                        		{ print } \
				' ${dest} > ${dest}.$$
				mv -f ${dest}.$$ ${dest}
			
			fi
		fi

		# Undo the old pkcs11_softtoken_extra name
		sed 's/pkcs11_softtoken_extra\.so/pkcs11_softtoken.so/' \
		 ${dest} > ${dest}.$$

		mv -f ${dest}.$$ ${dest}

		# Add pkcs11_tpm if it is not present.
		egrep 'pkcs11_tpm' $dest > /dev/null 2>& 1
		if [ $? != 0 ] ; then
			pkcs11tpm="/usr/lib/security/\$ISA/pkcs11_tpm.so"
			export pkcs11tpm
			nawk '/^# End SUNWcsr/ \
				{ print ENVIRON["pkcs11tpm"] } \
				{ print } \
				' ${dest} > ${dest}.$$
			mv -f ${dest}.$$ ${dest}
		fi
	fi
done
exit 0
