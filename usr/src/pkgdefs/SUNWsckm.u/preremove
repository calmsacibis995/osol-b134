PATH="/usr/bin:/usr/sbin:${PATH}"
export PATH

NAMEMAJOR="${BASEDIR}/etc/name_to_major"
REM_DRV="/usr/sbin/rem_drv -b ${BASEDIR}"

#
# Remove the sckmdrv driver from the system if it is installed
#
DRV="sckmdrv"
grep "^${DRV} " ${NAMEMAJOR} > /dev/null 2>&1
if [ $? -eq 0 ]; then
	$REM_DRV $DRV || exit 1
fi

exit 0
