# Detect and repair any UUID duplicates.
index=$BASEDIR/etc/zones/index
if [ -f $index ]; then
	if nawk -F: '
		/^\#/ || NF != 4 { print $0; next; }
		{
			if (flags[$4])
				sub(/:[-0-9a-z]*$/,":");
			print $0;
			flags[$4]=1;
		}
	' < $index > ${index}.pkg.$$; then
		if cmp -s $index ${index}.pkg.$$; then
			rm -f ${index}.pkg.$$
		else
			chown root:sys ${index}.pkg.$$
			chmod 644 ${index}.pkg.$$
			mv ${index}.pkg.$$ $index
		fi
	else
		rm -f ${index}.pkg.$$
	fi
fi

exit 0
